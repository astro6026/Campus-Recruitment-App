<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backg1"
    tools:context="avishkar2k17.com.tpo.MainActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="100dp">

            <TextView
                android:text="Photo:-"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:layout_margin="20dp"
                android:fontFamily="sans-serif-smallcaps"

                android:textSize="20sp"
                android:textColor="?android:attr/colorForeground"
                android:textStyle="normal|bold"
                android:textAlignment="center" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/defaultimage"
                android:id="@+id/res_photo"
                android:background="@android:color/transparent"
                android:baselineAlignBottom="false"
                android:layout_weight="0.27"
                android:adjustViewBounds="true"
                android:maxHeight="250dp"
                android:maxWidth="200dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:text="choose photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/upload_photo"
                    android:textColor="@android:color/background_dark"
                    android:padding="16dp"
                    android:clickable="true"
                    android:layout_marginTop="24dp"
                    style="@style/Base.TextAppearance.AppCompat.Body1"

                    android:background="@drawable/circular_button_layout"
                    android:textStyle="bold"
                    android:textScaleX="1.2" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:id="@+id/img_text"
                    android:textSize="10sp"
                    android:textColor="?android:attr/colorForeground"
                    android:textStyle="normal|bold"
                    android:textAlignment="center" />
            </LinearLayout>
            <Button
                android:text="upload photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/upload_photoServer"
                android:textColor="@android:color/background_dark"
                android:padding="16dp"
                android:clickable="true"
                android:layout_marginTop="24dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"

                android:background="@drawable/circular_button_layout"
                android:textStyle="bold"
                android:textScaleX="1.2" />
            <TextView
                android:text="Resume:-"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:layout_margin="20dp"
                android:fontFamily="sans-serif-smallcaps"

                android:textSize="20sp"
                android:textColor="?android:attr/colorForeground"
                android:textStyle="normal|bold"
                android:textAlignment="center" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:text="choose resume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/upload_resume"
                    android:textColor="@android:color/background_dark"
                    android:padding="16dp"
                    android:clickable="true"
                    android:layout_marginTop="24dp"
                    style="@style/Base.TextAppearance.AppCompat.Body1"

                    android:background="@drawable/circular_button_layout"
                    android:textStyle="bold"
                    android:textScaleX="1.2" />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:id="@+id/res_text"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="10sp"
                    android:textColor="?android:attr/colorForeground"
                    android:textStyle="normal|bold"
                    android:textAlignment="center" />
            </LinearLayout>
            <Button
                android:text="upload resume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/upload_resumeServer"
                android:textColor="@android:color/background_dark"
                android:padding="16dp"
                android:clickable="true"
                android:layout_marginTop="24dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"

                android:background="@drawable/circular_button_layout"
                android:textStyle="bold"
                android:textScaleX="1.2" />
            <Button
                android:text="Download resume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/download_resume"
                android:textColor="@android:color/background_dark"
                android:padding="16dp"
                android:clickable="true"
                android:layout_marginTop="24dp"
                style="@style/Base.TextAppearance.AppCompat.Body1"

                android:background="@drawable/circular_button_layout"
                android:textStyle="bold"
                android:textScaleX="1.2" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>

